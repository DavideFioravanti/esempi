<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<StackView android:id="@+id/stack_view" android:layout_width="match_parent"
		android:layout_height="match_parent" android:gravity="center"
		android:loopViews="true" />
	<TextView android:id="@+id/empty_view" android:layout_width="match_parent"
		android:layout_height="match_parent" android:gravity="center"
		android:textColor="@color/message_text_color" android:textStyle="bold"
		android:text="@string/empty_message" android:textSize="@dimen/message_text_size" />
</FrameLayout>
