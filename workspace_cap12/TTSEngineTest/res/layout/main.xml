<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<Spinner android:layout_height="wrap_content" android:id="@+id/languageSpinner" android:layout_width="fill_parent"></Spinner>
	<Button android:layout_height="wrap_content" android:id="@+id/talkButton"
	android:onClick="talk"
		android:layout_width="fill_parent" android:text="@string/talk_button_label"></Button>
	<EditText android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:inputType="textMultiLine"
		android:id="@+id/inputText" android:hint="@string/input_text_hint"></EditText>
</LinearLayout>
