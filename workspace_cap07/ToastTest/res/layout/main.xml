<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:layout_height="wrap_content" android:id="@+id/shortButton"
		android:onClick="showShortToast" android:layout_width="fill_parent"
		android:text="@string/short_label">
	</Button>
	<Button android:layout_height="wrap_content" android:id="@+id/longButton"
		android:onClick="showLongToast" android:layout_width="fill_parent"
		android:text="@string/long_label"></Button>
	<Button android:layout_height="wrap_content" android:id="@+id/customButton"
		android:onClick="showCustomToast" android:layout_width="fill_parent"
		android:text="@string/custom_label"></Button>
</LinearLayout>
